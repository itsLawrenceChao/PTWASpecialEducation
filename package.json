{
  "name": "ptwa_specialeducation",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "description": "PTWA Special Education - 特殊教育學習平台",
  "author": "PTWA Team",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:electron": "cross-env ELECTRON=true vite build",
    "preview": "vite preview",
    "docker-test": "docker-compose build --no-cache && docker-compose up",
    "test-all": "eslint . && npm run build && npm run docker-test",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore --fix src",
    "lint-fix": "eslint --fix .",
    "format": "prettier .  --write",
    "format-check": "prettier --check .",
    "electron:dev": "concurrently \"vite\" \"cross-env NODE_ENV=development electron .\"",
    "electron:build": "npm run build:electron && electron-builder"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "@quasar/extras": "^1.16.12",
    "@rollup/plugin-inject": "^5.0.3",
    "@vueuse/core": "^10.9.0",
    "axios": "^1.4.0",
    "bootstrap": "^5.3.2",
    "bootstrap-icons": "^1.11.1",
    "dompurify": "^3.2.5",
    "howler": "^2.2.4",
    "katex": "^0.16.22",
    "konva": "^9.3.14",
    "mitt": "^3.0.1",
    "pinia": "^2.2.2",
    "quasar": "^2.16.8",
    "vue": "^3.3.4",
    "vue-konva": "^3.0.2",
    "vue-router": "^4.0.13",
    "vuedraggable": "^4.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@quasar/vite-plugin": "^1.7.0",
    "@vitejs/plugin-vue": "^4.1.0",
    "cross-env": "^7.0.3",
    "electron": "^35.2.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.20.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-vue": "^9.32.0",
    "gh-pages": "^6.1.1",
    "globals": "^15.8.0",
    "prettier": "3.5.1",
    "sass": "^1.33.0",
    "vite": "^4.3.9",
    "concurrently": "^8.2.2"
  },
  "volta": {
    "node": "22.9.0"
  },
  "build": {
    "appId": "com.ptwa.specialeducation",
    "productName": "PTWA Special Education",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png"
    },
    "asar": true,
    "asarUnpack": [
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "dist",
        "to": "app/dist",
        "filter": [
          "**/*"
        ]
      }
    ]
  }
}
